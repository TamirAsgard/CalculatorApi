          "subtract",
          "multiply",
          "divide"
        ],
        "type": "string",
        "description": "Represents the supported mathematical operations"
      },
      "IO.Swagger.Models.CalculationRequest": {
        "required": [
          "number1",
          "number2"
        ],
        "type": "object",
        "properties": {
          "number1": {
            "type": "number",
            "description": "Gets or Sets Number1",
            "format": "double"
          },
          "number2": {
            "type": "number",
            "description": "Gets or Sets Number2",
            "format": "double"
          }
        },
        "additionalProperties": false,
        "description": ""
      },
      "IO.Swagger.Models.CalculationResponse": {
        "required": [
          "operation",
          "result",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "result": {
            "type": "number",
            "description": "Gets or Sets Result",
            "format": "double"
          },
          "operation": {
            "minLength": 1,
            "type": "string",
            "description": "Gets or Sets Operation"
          },
          "timestamp": {
            "type": "string",
            "description": "Gets or Sets Timestamp",
            "format": "date-time"
